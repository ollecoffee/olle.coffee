---
const weddingUrl = `https://www.svt.se`;
const weddingImage = `/wedding.jpg`;
import { Image, Picture } from '@astrojs/image/components';
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<head>
	<meta http-equiv="refresh" content={`5; url=${weddingUrl}`}/>
</head>

<BaseLayout title="Snart blire bröllop!" includeSidebar={false}>
	<div class="text-center">
		<section>
			<h1 class="text-3xl font-bold mb-2">Bröllop</h1>
			<Image class="mx-auto" src={weddingImage} width="240" height="320" alt="Emine & Olle at the location 5 years ago"/>
			<h1 class="text-3xl font-bold mb-2">25/5-24</h1>
			<h3 class="text-xl">Du blir snart skickad till anmälningsformuläret.</h3>
			<a class="btn btn-accent mt-9" href=`${weddingUrl}`>Kom direkt till formuläret</a>
		</section>
	</div>
</BaseLayout>