---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Side projects</div>
  </div>

  <HorizontalCard
    title="Espresso tools wishlist"
    img="/espresso-tools.webp"
    desc="espresso.tools is where I keep my dream lineup of coffee gear – part wishlist, part inspiration."
    url="https://espresso.tools"
    badge="Espresso"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Pour Over Coffee guide"
    img="/pour-coffee.webp"
    desc="pour.coffee is my little corner for pour-over – part guide, part love letter to slow coffee."
    url="https://pour.coffee"
    badge="Pour Over"
  />

</BaseLayout>
