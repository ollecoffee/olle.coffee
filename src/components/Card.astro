---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from 'astro:assets';
---

<div class="md:w-1/3 w-full">
  <a 
    href={url} 
    target={target}
    class="block focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 rounded-lg transition-all duration-200"
    aria-label={`${title}${badge ? ` (${badge})` : ''}`}
    rel={target === "_blank" ? "noopener noreferrer" : undefined}
  >
    <div class="card bg-base-100 transition ease-in-out hover:shadow-xl mx-6 my-2 hover:scale-[102%]">
      <Image 
        width={750} 
        height={422} 
        format="webp" 
        src={img} 
        alt={title}
        loading="lazy"
        class="w-full h-auto"
      />
      <div class="card-body">
        <h2 class="card-title">
          {title}
          {badge && (
            <div 
              class="badge badge-secondary"
              aria-label={`Status: ${badge}`}
            >
              {badge}
            </div>
          )}
        </h2>
        <p>{desc}</p>
        {tags && tags.length > 0 && (
          <div 
            class="card-actions justify-end"
            role="list"
            aria-label="Taggar"
          >
            {tags.map((tag) => (
              <div 
                class="badge border-current"
                role="listitem"
              >
                {tag}
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  </a>
</div>

